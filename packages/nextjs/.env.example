# Reown AppKit Configuration
# Get your project ID at: https://cloud.reown.com
# Supports all major wallets: MetaMask, Coinbase, Trust, Ledger, Safe, Rainbow, etc.
NEXT_PUBLIC_REOWN_PROJECT_ID=

# Alchemy API Key
# Get your API key at: https://dashboard.alchemyapi.io
NEXT_PUBLIC_ALCHEMY_API_KEY=

# OnchainKit API Key (for BASE-optimized components)
# Get your API key at: https://portal.cdp.coinbase.com
NEXT_PUBLIC_ONCHAINKIT_API_KEY=

# OpenAI API Key (for voice recognition with Whisper)
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Voice Recognition Configuration
# Enable Web Speech API (browser-native, zero-cost)
NEXT_PUBLIC_ENABLE_WEB_SPEECH=true

# Deepgram API Key (optional - premium fallback for African accents)
# Get your API key at: https://console.deepgram.com
DEEPGRAM_API_KEY=

# Filecoin/IPFS Storage Configuration (for voice receipts)
# IPFS/Kubo RPC API URL (default: Infura)
# Get credentials at: https://infura.io/product/ipfs
IPFS_API_URL=https://ipfs.infura.io:5001

# Infura IPFS Project ID and Secret
# Required for IPFS storage authentication
IPFS_PROJECT_ID=
IPFS_PROJECT_SECRET=

# Web3.Storage API Token (optional - fallback storage provider)
# Get your token at: https://web3.storage
# Provides automatic Filecoin backing and additional redundancy
NEXT_PUBLIC_WEB3_STORAGE_TOKEN=

# Chainlink Price Feed Configuration (BASE Mainnet)
# Enable/disable Chainlink price feeds (default: true)
NEXT_PUBLIC_ENABLE_CHAINLINK_FEEDS=true

# Currency Conversion Configuration
# Default slippage tolerance (0.5% = 0.005)
NEXT_PUBLIC_DEFAULT_SLIPPAGE=0.005

# Maximum slippage tolerance (5% = 0.05)
NEXT_PUBLIC_MAX_SLIPPAGE=0.05

# Price feed cache duration in milliseconds (default: 30000 = 30 seconds)
NEXT_PUBLIC_PRICE_CACHE_DURATION=30000

# The Graph Subgraph Configuration
# Subgraph URL for querying transaction history and analytics
# Get your subgraph ID from: https://thegraph.com/studio/
NEXT_PUBLIC_SUBGRAPH_URL=https://api.studio.thegraph.com/query/YOUR_SUBGRAPH_ID/nuru-voice-payments/version/latest

# Coinbase Smart Wallet Configuration
# Wallet preference: 'all' (default), 'smartWalletOnly', or 'eoaOnly'
# 'smartWalletOnly' forces passkey-based Smart Wallet for best onboarding UX
NEXT_PUBLIC_COINBASE_WALLET_PREFERENCE=all

# Coinbase Developer Platform (CDP) Project ID
# Get your project ID from: https://portal.cdp.coinbase.com
# Used for Smart Wallet, Paymaster, and OnchainKit features
NEXT_PUBLIC_CDP_PROJECT_ID=

# Paymaster URL for gasless transactions (optional)
# Enables sponsored transactions for better UX
NEXT_PUBLIC_PAYMASTER_URL=
